[Unit]
Description = <%= fetch(:application) %> server
After=network.target

[Service]
Environment=PWD=<%= current_path %>
# EnvironmentFile=<%= shared_path %>/.env
WorkingDirectory = <%= current_path %>
ExecStart = <%= current_path %>/bin/limehd-syslog-server --influx-url http://influx.iptv2022.com:8086 --influx-db influx --bind-address 0.0.0.0:1514 --influx-measurement mediastreaming --influx-measurement-online online --online-duration 10
KillMode=mixed
Restart=always

[Install]
# Use default.target to autoboot user service
# https://superuser.com/questions/1025091/start-a-systemd-user-service-at-boot
# WantedBy = multi-user.target
WantedBy=default.target
